<main class="main">
  <nav class="main-nav-bar">
    <div class="btnChangeColor">
      <div class="btnChange"></div>
    </div>

    <div class="main-nav-bar__right">
      <div class="main-nav-bar__search">
        <input
          class="main-nav-bar__input"
          type="text"
          name=""
          id=""
          placeholder="Gõ những thứ bạn không tìm được"
        />
        <button class="main-nav-bar__button" type="submit">
          <i class="fas fa-search"></i>
        </button>
      </div>

      <div class="main-nav-bar__logo">
        <img
          src="../img/customerImage/customer5.png"
          alt=""
          class="main-nav-bar__image"
        />
      </div>
    </div>
  </nav>
  <section class="main-field">
    <div class="main-top-wrapper">
      <h1 class="main-title">Welcome to Admin</h1>
      <a class="btn-addProduct btnHandleProduct" id="btnAddProduct"
        ><i class="fas fa-plus"></i
      ></a>
      <div id="setting" class="icon-box">
        <i class="bi bi-gear-fill"></i>
      </div>
    </div>
    <div class="display-data-box">
      <table class="data-table">
        <tr>
          <th class="th-stt">STT</th>
          <th>Tên món ăn</th>
          <th>Giá</th>
          <th class="desc">Mô tả về món ăn</th>
          <th>Hình ảnh</th>
          <th>Danh mục món</th>
          <th>Quản lý</th>
        </tr>
        <% for(i = 0; i < data.itemQuery.length; i++) { %>
        <tr>
          <td class="th-stt"><%- j= i + 1 %></td>
          <td><%= data.itemQuery[i].foodName %></td>
          <td><%= data.itemQuery[i].foodPrice %></td>
          <td><p class="desc"><%= data.itemQuery[i].foodDesc %></p></td>
          <td>
            <img
              class="imageData"
              src="../img/uploads/itemImages/<%= data.itemQuery[i].foodImage %>"
              alt=""
            />
          </td>
          <td><%= data.itemQuery[i].catergoryName %></td>
          <td class="manage">
            <form action="../" method="post">
              <a
                class="btn-call-action btn-call-action-delete"
                type="button"
                href="#"
                id="<%= data.itemQuery[i].id %>"
              >
                <i class="fas fa-trash-alt"></i>
              </a>
              <a
                class="btn-call-action btn-call-action-edit"
                id="<%= data.itemQuery[i].id %>"
                href="../handle-item/get-item?id=<%= data.itemQuery[i].id %>"
              >
                <i class="fas fa-pen-nib"></i>
              </a>
            </form>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
    <div class="pagination-page">
      <% if(data.pageNum > 1) { %> <a class="selectedLink" href="?page=itemPage&pageNumber=<%= data.pageNum - 1 %>"> < </a> <% } %>
      <% for(let i = data.iteratorLink; i < data.endingLink; i++) { %>
        <% if (i == data.pageNum) { %>
          <a class="selectedLink" href="?page=itemPage&pageNumber=<%= i %>"> <%= i %> </a>
        <% continue; } %>
          <a class="selectedLink" href="?page=itemPage&pageNumber=<%= i %>"> <%= i %> </a>
      <% } %>
      <% if(data.pageNum < data.numberOfPages) { %> <a class="selectedLink" href="?page=itemPage&pageNumber=<%= data.pageNum + 1 %>"> > </a> <% } %>
    </div>
  </section>
</main>
<%- include("../partials/itemManage/itemAdd", { Catergories }); %>
<%- include("../partials/itemManage/deleteDialog"); %>