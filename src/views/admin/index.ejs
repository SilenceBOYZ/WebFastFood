<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="img/Pizza.png"
      alt="Logo cafe Misa"
      type="image/x-icon"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Coiny&family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.linearicons.com/free/1.0.0/svgembedder.min.js"></script>
    <link rel="stylesheet" href="css/admin.css" />

    <title>Pizza Tri Pu, Every day is happy day --</title>
  </head>
  <body id="backgroundColor">
    <div class="container-admin admin-page">
      <nav>
        <a href="#" class="logo">
          <h2 class="nav-item nav-title">DashBoard</h2>
        </a>
        <ul class="nav-list">
          <li>
            <a href="#">
              <i class="fas fa-home"></i>
              <span class="nav-item">Home</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-user"></i>
              <span class="nav-item">Profile</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-wallet"></i>
              <span class="nav-item">Wallet</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-chart-bar"></i>
              <span class="nav-item">Analytics</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-tasks"></i>
              <span class="nav-item">Tasks</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-cog"></i>
              <span class="nav-item">Settings</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-question-circle"></i>
              <span class="nav-item">Help</span>
            </a>
          </li>
        </ul>
        <a href="" class="logout">
          <i class="fas fa-sign-out-alt"></i>
          <span class="nav-item">Log out</span>
        </a>
      </nav>
      <main class="main">
        <nav class="main-nav-bar">
          <div class="btnChangeColor">
            <div class="btnChange"></div>
          </div>

          <div class="main-nav-bar__right">
            <div class="main-nav-bar__search">
              <input
                class="main-nav-bar__input"
                type="text"
                name=""
                id=""
                placeholder="Gõ những thứ bạn không tìm được"
              />
              <button class="main-nav-bar__button" type="submit">
                <i class="fas fa-search"></i>
              </button>
            </div>

            <div class="main-nav-bar__logo">
              <img
                src="../img/customerImage/customer5.png"
                alt=""
                class="main-nav-bar__image"
              />
            </div>
          </div>
        </nav>

        <section class="main-field">
          <div class="main-top-wrapper">
            <h1 class="main-title">Welcome to Admin</h1>
            <a class="btn-addProduct btnHandleProduct" id="btnAddProduct"
              ><i class="fas fa-plus"></i
            ></a>
          </div>
          <div class="display-data-box">
            <table class="data-table">
              <tr>
                <th class="th-stt">STT</th>
                <th>Tên món ăn</th>
                <th>Giá</th>
                <th class="desc">Mô tả về món ăn</th>
                <th>Hình ảnh</th>
                <th>Danh mục món</th>
                <th>Quản lý</th>
              </tr>
              <% for(i = 0; i < data.length; i++) { %>
              <tr>
                <td class="th-stt"><%- i %></td>
                <td><%= data[i].foodName %></td>
                <td><%= data[i].foodPrice %></td>
                <td><p class="desc"><%= data[i].foodDesc %></p></td>
                <td>
                  <img
                    class="imageData"
                    src="../img/uploads/<%= data[i].foodImage %>"
                    alt=""
                  />
                </td>
                <td><%= data[i].catergoryId %></td>
                <td class="manage">
                  <form action="../" method="post">
                    <a
                      class="btn-call-action btn-call-action-delete"
                      type="button"
                      href="#"
                      id="<%= data[i].id %>"
                    >
                      <i class="fas fa-trash-alt"></i>
                    </a>
                    <a
                      class="btn-call-action btn-call-action-edit"
                      id="<%= data[i].id %>"
                      href="../handle-item/get-item?id=<%= data[i].id %>"
                    >
                      <i class="fas fa-pen-nib"></i>
                    </a>
                  </form>
                </td>
              </tr>
              <% } %>
            </table>
          </div>
        </section>
      </main>
    </div>

    <div class="modal-pop-up">
      <div class="modal-pop-up__header">
        <h4 class="modal-pop-up__title">Xóa sản phẩm</h4>
        <button class="modal-pop-up__icon" id="removeModal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <p class="modal-pop-up__paragraph">
        Bạn chắc chắn muốn xóa sản phẩm này chứ
      </p>
      <form class="modal-pop-upBtn" id="formDelete" action="" method="POST">
        <a class="btn-click-action" id="cancel-action" href="#">Hủy</a>
        <button class="btn-click-action" id="delete-action" type="submit">Xóa</button>
      </form>
    </div>

    <%- include('partials/popup/userAdd'); %>
    <script src="../js/validateNumber.js"></script>
    <script src="../js/previewImage.js"></script>
    <script src="../js/popUp.js"></script>
    <script type="module">
      const btnDelete = document.querySelectorAll(".btn-call-action-delete");
      const dialog = document.querySelector(".modal-pop-up");
      const removeModal = document.getElementById("removeModal");
      const cancelActionDelete = document.getElementById("cancel-action");
      const deleteAction = document.getElementById("delete-action");
      const formDelete = document.getElementById("formDelete");
      btnDelete.forEach((btn) => {
        btn.onclick = () => {
          dialog.classList.add("modal-pop-up-active");
          formDelete.setAttribute("action", `../handle-item/delete-item?_method=DELETE&id=${btn.id}`); 
        };
        cancelActionDelete.onclick = () => {
          dialog.classList.remove("modal-pop-up-active");
        };
      });
      removeModal.onclick = () => {
        dialog.classList.remove("modal-pop-up-active");
      };
    </script>
  </body>
</html>
